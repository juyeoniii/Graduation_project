<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5ECC7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CertificationActivity">


    <ImageButton
        android:onClick="onButtontumbler"
        android:id="@+id/tumblerbtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:background="#F5ECC7"
        android:scaleType="fitXY"
        android:src="@drawable/tumbler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>

    <TextView
        android:id="@+id/tumbler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="185dp"
        android:text="텀블러 인증"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/strowbtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp"
        android:background="#F5ECC7"
        android:scaleType="fitXY"
        android:src="@drawable/paperstrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tumblerbtn"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/strow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="185dp"
        android:text="종이빨대 인증"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tumbler"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mealbtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="210dp"
        android:background="#F5ECC7"
        android:scaleType="fitXY"
        android:src="@drawable/meal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>

    <TextView
        android:id="@+id/meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="336dp"
        android:text="채식 인증"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/walkbtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="210dp"
        android:background="#F5ECC7"
        android:scaleType="fitXY"
        android:src="@drawable/walking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mealbtn"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="336dp"
        android:text="걸음 수 인증"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/meal"
        app:layout_constraintTop_toTopOf="parent" />




    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="4"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="48dp">

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="onButton1Clicked"
            android:padding="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon2"


            />

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon4"

            ></ImageButton>

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon1"

            ></ImageButton>

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon3"

            ></ImageButton>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>