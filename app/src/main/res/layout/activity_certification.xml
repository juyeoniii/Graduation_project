<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CertificationActivity">

    <ImageButton
        android:id="@+id/tumblerbtn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"

        android:layout_marginRight="10dp"
        android:background="@drawable/dong"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/tumbler"
        app:layout_constraintEnd_toStartOf="@+id/strawbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/strawbtn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"

        android:layout_marginRight="20dp"
        android:background="@drawable/dong"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/ecobag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tumblerbtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mealbtn"

        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/dong"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/meal"
        app:layout_constraintEnd_toStartOf="@+id/walkbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>

    <ImageButton
        android:id="@+id/walkbtn"

        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dong"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/walking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mealbtn"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="4"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="229dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-54dp">

            <ImageButton
                android:id="@+id/hmbtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon2"


                />

            <ImageButton
                android:id="@+id/cmrbtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon4"

                ></ImageButton>

            <ImageButton
                android:id="@+id/scbtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon3"

                ></ImageButton>

            <ImageButton
                android:id="@+id/mpbtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon1"

                ></ImageButton>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="10dp"
        android:text="인증"
        android:textColor="#000"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/tumbler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="200dp"
        android:text="텀블러 인증"
        android:textColor="#F14CAF50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/straw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:text="장바구니 인증"
        android:textColor="#F14CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tumbler"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="380dp"
        android:text="채식 인증"
        android:textColor="#F14CAF50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:text="걸음 수 인증"
        android:textColor="#F14CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/meal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="아이디"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/meal"
        app:layout_constraintTop_toBottomOf="@+id/mealbtn"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="닉네임"
        android:textColor="#ffffff"
        tools:ignore="MissingConstraints"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="38dp" />

</androidx.constraintlayout.widget.ConstraintLayout>