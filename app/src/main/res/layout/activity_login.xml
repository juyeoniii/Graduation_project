<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="145dp"><![CDATA[




            />

        ]]>




        <ImageView
            android:layout_marginTop="60dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ecomatelogo" />



        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:hint="ID를 입력하세요."
            android:textSize="15dp"
            android:inputType="textPersonName"
            android:textColor="#8C8989"
            android:textColorLink="#FFFFFF"></EditText>

        <EditText
            android:id="@+id/et_pass"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="비밀번호를 입력하세요."
            android:textSize="15dp"
            android:textColor="#8C8989"></EditText>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="100dp"
            android:textSize="13dp"
            android:text="자동로그인" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:background="#3A3A37"
                android:text="로그인"
                android:textSize="13dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"></Button>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:textSize="13dp"
                android:text="회원가입"
                android:background="#3A3A37"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF">>

            </Button>




        </LinearLayout>




    </LinearLayout>
</LinearLayout>